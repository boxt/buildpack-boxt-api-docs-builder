#!/bin/sh
# bin/detect BUILD_DIR

cd $BUILD_DIR
echo "BUNDLE BIN: $BUNDLE_BIN"

exit 0

export BUNDLE_WITHOUT='development:test'
export BUNDLE_PATH=vendor/bundle
export BUNDLE_BIN=vendor/bundle/bin
export BUNDLE_DEPLOYMENT=1

bundle info boxt_documentation

# This pack is valid if the boxt_documentation gem is installed
if [ $? -eq 0 ]; then
  echo "BOXT Documentation gem installed"
  exit 0
else
  echo "BOXT Documentation gem not installed. Exiting"
  exit 1
fi
